{% extends "layouts/base.twig"%}

{% block title %} Editar Post {% endblock %}

{% block content %}
<section class="articles">
  <div class="column is-10 is-offset-1">
    <div class="card article">
      <div class="card-content">
        <form action="{{ path_for('post.edit', {'id': post.id}) }}" method="POST">

          <div class="field is-horizontal">
            <div class="field-label is-normal">
              <label class="label">Título:</label>
            </div>
            <div class="field-body">
              <div class="field">
                <p class="control is-expanded has-icons-left">
                  <input class="input is-medium {{ errors.title ? 'is-danger' : ''}}" type="text" name="title" value="{{ post.title }}">
                  <span class="icon is-small is-left">
                    <i class="fas fa-heading"></i>
                  </span>
                </p>
                {% if errors.title %}
                  <small class="has-text-danger">{{ errors.title | first }}</small>
                {% endif %}
              </div>
            </div>
          </div>

          <div class="field is-horizontal">
            <div class="field-label">
              <label class="label">Status:</label>
            </div>
            <div class="field-body">
              <div class="field is-narrow">
                <div class="control">
                  <label class="radio">
                    <input type="radio" {{ post.published ? 'checked' : ''}} value="1" name="published">
                    Publicado
                  </label>
                  <label class="radio">
                    <input type="radio" {{ post.published ? '' : 'checked'}} value="0" name="published">
                    Rascunho
                  </label>
                </div>
              </div>
            </div>
          </div>

          <div class="field is-horizontal">
            <div class="field-label is-normal">
              <label class="label">Descrição:</label>
            </div>
            <div class="field-body">
              <div class="field">
                <div class="control">
                  <textarea id="summernote" name="description" class="{{ errors.description ? 'is-danger' : ''}}">
                    {{ post.description }}
                  </textarea>
                </div>
                {% if errors.description %}
                  <small class="has-text-danger">{{ errors.description | first }}</small>
                {% endif %}
              </div>
            </div>
          </div>

          <div class="field is-horizontal">
            <div class="field-label">
            </div>
            <div class="field-body">
              <div class="field">
                <div class="control">
                  <button type="submit" class="button is-primary is-medium is-pulled-right">
                    Salvar Alterações
                  </button>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
{% endblock %}

{% block js %}
  <script src="{{ base_url() }}/libs/summernote/summernote-lite.min.js"></script>
  <script>
    $(document).ready(function() {
        $('#summernote').summernote({
          lang: 'pt-BR',
          height: 100,
          toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['fontname', ['fontname']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link']],
            ['view', ['fullscreen', 'codeview', 'help']],
          ],
        });
    });
  </script>
{% endblock %}