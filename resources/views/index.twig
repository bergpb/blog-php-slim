{% extends "layouts/base.twig" %}

{% block content %}
<section class="articles">
  <div class="column is-8 is-offset-2">
    {% for post in posts %}
      <div class="card article">
        <div class="card-content">
          <div class="media">
            <div class="media-center">
              <img src="{{ base_url }}/uploads/{{ auth.user.avatar }}" alt="Imagem do Author" class="author-image" />
            </div>
            <div class="media-content has-text-centered">
              <p class="title article-title">{{ post.title | title }}</p>
              <p class="subtitle is-6 article-subtitle">
                <span>{{ post.created_at | date('d/m/Y H:i:s') }}</span>
              </p>
            </div>
          </div>
          <div class="content article-body">
            {{ post.description | raw }}
          </div>
            <div class="has-text-right">
              <a href="" class="button is-warning is-focused">Editar</a>
              <a href="" class="button is-danger is-focused">Deletar</a>
            </div>
        </div>
      </div>
    {% endfor %}
    <section class="hero is-info is-bold is-small promo-block">
      <div class="hero-body">
        <div class="container">
          <h1 class="title">
            <i class="fa fa-bell-o"></i> Recentemente lan√ßamos uma comunidade.</h1>
          <span class="tag is-black is-medium is-rounded">
            Venha fazer parte da nossa comunidade!
          </span>
        </div>
      </div>
    </section>
  </div>
</section>
{% endblock %}
